<% {'xs': '16px', 'sm': "24px", 'md': "32px", 'lg': "48px", 'xl': "64px"}.each do |size, pixels| -%>
.jpic-<%= size -%> {
  font-size: <%= pixels -%>;
  display: inline-block;
  line-height: 1em;
}
<% end -%>

<% pictos_hash[:pictos].each do |picto| -%>
.jpic-<%= picto[:name]%> { background-image: url(<%= "#{pictos_hash[:root]}/#{picto[:path]}" -%>); }
